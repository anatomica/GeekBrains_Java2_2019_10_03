        <VBox fx:id="chatPanel" alignment="CENTER" layoutY="-85.0" prefWidth="576.0" spacing="5.0" visible="false" AnchorPane.bottomAnchor="-32.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="2.0">
            <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ListView fx:id="clientList" prefHeight="100.0" prefWidth="192.0" />
                      <TextArea fx:id="chatTextArea" editable="false" prefHeight="164.0" prefWidth="437.0" wrapText="true">
                          <padding>
                              <Insets bottom="5.0" right="5.0" />
                          </padding>
                      </TextArea>
               </children>
            </HBox>
                <HBox spacing="10.0">
               <children>
                        <TextField fx:id="messageText" onAction="#sendText" prefHeight="25.0" prefWidth="314.0" />
                        <Button fx:id="sendMessageButton" minWidth="100.0" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
               </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" right="5.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
