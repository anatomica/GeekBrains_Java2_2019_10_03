<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="600.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NetworkChatClient.controller.PrimaryController">
   <children>
      <TextArea fx:id="chatTextArea" editable="false" prefHeight="344.0" prefWidth="560.0" style="-fx-border-color: grey; -fx-border-width: 1;" wrapText="true" />
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="messageText" onAction="#sendText" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendMessageButton" minWidth="100.0" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
